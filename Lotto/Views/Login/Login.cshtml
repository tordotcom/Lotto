@model Lotto.Models.UserLogin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Login.cshtml";
}
@if (@ViewBag.Message != null)
{
    <script>
        alert("fail");
    </script>
    @*<div style="border: 1px solid red">
        @ViewBag.Message
    </div>*@
}
<div class="sufee-login d-flex align-content-center flex-wrap">
    <div class="container">
        <div class="login-content">
            <div class="login-logo">
                <a href="index.html">
                    <img class="align-content" src="~/Images/overlay-banner_original.png" alt="">
                </a>
            </div>
            <div class="login-form">
                <form method="post" action="@Url.Action("Login", "Login")">
                    <div class="form-group">
                        <label>Username</label>
                        @Html.TextBoxFor(a => a.Username, new { placeholder = "Username", @class = "username" })
                        @*<input type="email" class="form-control" placeholder="Email">*@
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        @Html.PasswordFor(a => a.Password, new { placeholder = "Password", @class = "password" })
                        @*<input type="password" class="form-control" placeholder="Password">*@
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Remember Me
                        </label>
                        <label class="pull-right">
                            <a href="#">Forgotten Password?</a>
                        </label>

                    </div>
                    <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Sign in</button>
                    <div class="register-link m-t-15 text-center">
                        <p>Don't have account ? <a href="#"> Sign Up Here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

