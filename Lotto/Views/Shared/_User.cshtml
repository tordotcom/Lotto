        function clock() {
            var today = new Date();
            var h = today.getHours();
            var m = today.getMinutes();
            var s = today.getSeconds();
            if (s < 10) {
                s = "0" + s;
            }

            $(".digital-clock").text(h + " : " + m + " : " + s);
            setTimeout(function () { clock() }, 500);
