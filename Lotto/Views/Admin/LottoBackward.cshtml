@model IList<Lotto.Models.Period>
@{ ViewBag.Title = "LottoBackward"; Layout = "~/Views/Shared/_Admin.cshtml"; }

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <i class="mr-2 fa fa-spinner"></i>
                <strong class="card-title">ดูสรุปหวยย้อนหลัง</strong>
            </div>
            <div class="card-body">
                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>หวย</th>
                            <th>งวดวันที่</th>
                            <th>สถานะ</th>
                            <th>ปิดเมื่อ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var status = "";
                            if(item.Check_Result=="1")
                            {
                                status = "ตรวจแล้ว";
                            }
                            else if(item.Status=="1")
                            {
                                status = "เปิดรับ";
                            }
                            else if(item.Status == "0")
                            {
                                status = "ปิดรับ";
                            }
                            else { }
                            <tr>
                                <td>รัฐบาล</td>
                                <td>@String.Format("{0:dd/MM/yyyy}", item.Date)</td>
                                <td>@status</td>
                                <td>@String.Format("{0:dd/MM/yyyy HH:mm:ss}", @item.update_date)</td>
                                <td>
                                  <button type="button" class="btn btn-primary lottoDetail" data-toggle="modal" data-pid="@item.ID" data-date="@String.Format("{0:dd/MM/yyyy}", item.Date)" data-target="#showLottoModal">สรุปยอด</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

