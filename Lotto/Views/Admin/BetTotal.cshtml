@model IList<Lotto.Models.total_bet>
@{
    ViewBag.Title = "BuyTotal";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <i class="mr-2 fa fa-file-text-o"></i>
                <strong class="card-title">ยอดสรุปเป็นใบ</strong>
            </div>
            <div class="card-body">
                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>สมาชิก</th>
                            <th>โพยทั้งหมด</th>
                            <th>รับแล้ว</th>
                            <th>ยอดแทง</th>
                            <th>ยอดรับ</th>
                            <th>ยอดหัก%</th>
                            <th>ยอดถูก</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var totalPoll = Int32.Parse(item.Reject) + Int32.Parse(item.Receive);
                            <tr>
                                <td>@item.Name</td>
                                <td>@totalPoll</td>
                                <td>@item.Receive</td>
                                <td>@item.Amount</td>
                                <td>@item.AmountReceive</td>
                                <td>@item.AmountDiscount</td>
                                <td>0</td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-primary">สรุปยอด</button>
                                    <button type="button" class="btn btn-sm btn-success">ใบแจ้งยอด</button>
                                    <button type="button" class="btn btn-sm btn-warning">ดูโพย</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    (function ($) {
        $('#bootstrap-data-table').DataTable({
            lengthMenu: [[10, 20, 50, -1], [10, 20, 50, "All"]],
        });
    })(jQuery);
</script>

