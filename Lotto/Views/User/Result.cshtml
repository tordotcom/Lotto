
@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/_User.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form action="#" method="post" enctype="multipart/form-data" class="form-horizontal">
                    <div class="row form-group">
                        <div class="col-md-1"><label for="select" class="form-control-label">วันที่</label></div>
                        <div class="col-md-4">
                            <input type="text" id="start_datepicker" name="text-input" class="form-control form-control-sm">
                        </div>
                        <div class="col-md-1"><label for="select" class="form-control-label">ถึงวันที่</label></div>
                        <div class="col-md-4">
                            <input type="text" id="end_datepicker" name="text-input" class="form-control form-control-sm">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary">แสดง</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <i class="mr-2 fa fa-star-o"></i>
                <strong class="card-title">ดูผลการออกรางวัล</strong>
            </div>
            <div class="card-body">
                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>วันที่</th>
                            <th>หวย</th>
                            <th>3 บน</th>
                            <th>3 ล่าง</th>
                            <th>3 หน้า</th>
                            <th>2 ล่าง</th>
                        </tr>
                    </thead>
                    <tbody id="t_result"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/Assets/js/user_result.js"></script>
<script>  
    getResult= '@Url.Action("getResult", "User")';
    (function ($) {
        $('#bootstrap-data-table').DataTable({
            lengthMenu: [[10, 20, 50, -1], [10, 20, 50, "All"]],
        });

        $.ajax({
			url: updateResult,
			data: { Result: ResultData1 },
			type: "POST",
			dataType: "json",
			success: function (data) {
				if (data == "ss") {
					Swal.fire({
						type: 'success',
						title: 'แก้ไขข้อมูลเรียบร้อย',
						showConfirmButton: false,
						timer: 1500
					});
					$('.modal-backdrop').remove();
					$(".close").trigger('click');
					setTimeout(function () {
						location.reload(true);
					}, 2000);
				}
			},
			error: function (xhr, ajaxOptions, thrownError) {
				alert("error");
			}
		});
    })(jQuery);
</script>
